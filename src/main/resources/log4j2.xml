<Configuration status="WARN" monitorInterval="30">

    <Properties>
<!--        <Property name="LOG_PATTERN">%d{'D-'yyyy-MM-dd 'T-'HH:mm:ss.SSS 'Z'Z} &#45;&#45; [T_ID-%tid | T_NAME-%tn] [%p] [Class - %C | Method - %M | Line - %L] %m%n</Property>-->
